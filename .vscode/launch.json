{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Flutter for web",
            "type": "dart",
            "request": "launch",
            "program": "mobile_app/lib/main.dart",
            "args": [
              "-d",
              "chrome",
              "--web-renderer",
              "html"
            ]
        },
        {
            "name": "mobile_app",
            "cwd": "mobile_app",
            "request": "launch",
            "type": "dart"
        },
        {
            "name": "mobile_app (profile mode)",
            "cwd": "mobile_app",
            "request": "launch",
            "type": "dart",
            "flutterMode": "profile"
        },
        {
            "name": "mobile_app (release mode)",
            "cwd": "mobile_app",
            "request": "launch",
            "type": "dart",
            "flutterMode": "release"
        },
    ]
}